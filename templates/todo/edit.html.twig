{% extends 'base.html.twig' %}

{% block title %}Your To-Dos!{% endblock %}

{% block main %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_todos')}}" class="btn-icon"><i class="fas fa-chevron-circle-left"></i></a>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-lg-8">
            <h1>
                {% if todo.id %}
                    Edit your To-Do: <br>{{ todo.name }}
                {% else %}
                    Add a new To-Do
                {% endif %}
            </h1>
            <div class="">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

