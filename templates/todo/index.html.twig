{% extends 'base.html.twig' %}

{% block title %}All your To-Dos{% endblock %}

{% block main %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_todos_new')}}" class="btn-icon"><i class="fas fa-plus-circle"></i></a>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-8">
            <h1>All your To-Dos </h1>
            {% if todos|length > 0 %}
                <ol>
                    {% for todo in todos %}
                        <li>
                            <div class="d-flex">
                                <div class="mr-auto p-2 {{ todo.getDone ? 'is-done' : '' }}"><p>{{ todo.name }}</p></div>
                                <div class="p-2">
                                    <a href="{{ path('app_todos_edit', { 'todo': todo.id })}}" class="btn-icon {{ todo.getDone ? 'is-done' : '' }}"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="{{ path('app_todos_delete', { 'todo': todo.id })}}" class="btn-icon {{ todo.getDone ? 'is-done' : '' }}"><i class="fa fa-trash-alt"></i></a>
                                    <a href="{{ path('app_todos_done', { 'todo': todo.id })}}" class="btn-icon {{ todo.getDone ? 'is-done' : '' }}"><i class="fa fa-check"></i></a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ol>
            {% else %}
                <p>Add a new To-Do before you can manage and track them üòÅ</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
