{% extends 'base.html.twig' %}

{% block title %}All your Goals{% endblock %}

{% block main %}
    <div class="row justify-content-md-center">
        <div class="col-8 align-self-center">
            <div class="d-flex justify-content-between p-2">
                <h1>All your Goals</h1>
                <div class="d-">
                    <a href="{{ path('app_goals_new')}}" class="btn btn-sm btn-outline-secondary">New</a>
                </div>
            </div>
            {% if goals|length > 0 %}
                <ol>
                    {% for goal in goals %}
                        <li>
                            <div class="d-flex">
                                <div class="mr-auto p-2 {{  goal.getDone ? 'is-done' : '' }}"><p>{{ goal.name }}</p></div>
                                <div class="p-2">
                                    <a href="{{ path('app_goals_edit', { 'goal': goal.id })}}" class="btn-icon {{  goal.getDone ? 'is-done' : '' }}"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="{{ path('app_goals_delete', { 'goal': goal.id })}}" class="btn-icon {{  goal.getDone ? 'is-done' : '' }}"><i class="fa fa-trash-alt"></i></a>
                                    <a href="{{ path('app_goals_done', { 'goal': goal.id })}}" class="btn-icon {{  goal.getDone ? 'is-done' : '' }}"><i class="fa fa-check"></i></a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ol>
            {% else %}
                <p>Add a new Goal before you can manage and track them üòÅ</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
