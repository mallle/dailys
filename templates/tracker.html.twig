{% extends 'base.html.twig' %}
{% import '_macros.html.twig' as macros %}

{% block title %}Track your habits{% endblock %}

{% block css %}
    {{ parent() }}
    <script src="{{ asset('css/main.css') }}"></script>
{% endblock css %}

{% block main %}
    <h1 class="text-center">All your Habits</h1>
    {% if habits|length > 0 %}

        {% for habit in habits %}

                <div class="d-flex">
                    <div class="check-button-mobile" style="color: {{ habit.color }}"><p>{{ habit.name | first }}</p></div>
                    <div class="col-8 col-sm-4 mr-40 p-2"><p>{{ habit.name }}</p></div>
                    <div class="wrapper p-2">
                        <i class="fas fa-calendar-times"></i>
                        <span class="badge badge-light">{{ habit.getNumberOfWeeklyCheckedHabits(week.monday, week.sunday)|length }}</span>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_stats', { 'habit': habit.id })}}" class="btn-icon"><i class="far fa-chart-bar"></i></a>
                    </div>
                </div>
        {% endfor %}
    {% endif %}
    <table class="table table-bordered d-none d-lg-table">
        <thead>
        <tr class="month-name">
            <th colspan="7" class="text-center">
                <div class="d-flex justify-content-between">
                    <a class="align-self-center btn-icon"
                       href="{{ path('app_tracker', {'month': lastMonth}) }}"><i class="fas fa-chevron-circle-left"></i></a>
                    <h1 class="display-4">{{ time|date('F Y') }}</h1>
                    <a class="align-self-center btn-icon"
                       href="{{ path('app_tracker', {'month': nextMonth}) }}"><i
                                class="fas fa-chevron-circle-right"></i></a>
                </div>
            </th>
        </tr>
        <tr class="week-name">
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% set daysInMonth = time|date('t') %}
            {% set startDow = time|date('F 1\\s\\t Y')|date('N') - 1 %}
            {% set dow = startDow %}
            {% for day in range(1,daysInMonth) %}
            {% if loop.first and startDow != 0 %}
                <td colspan="{{ startDow }}"></td>
            {% endif %}
            <td>
                <div>
                    {% if day == time|date('d') %}
                        <div class="text-info">{{ day }}</div>
                    {% else %}
                        <div>{{ day }}</div>
                    {% endif %}
                    {% for habit in habits %}
                        <form action="{{ path('app_habit_check', {'habit': habit.id, 'date': day ~ time|date('FY') }) }}"
                              name="formName">
                            <div class="d-flex flex-column">
                                <button type="submit"
                                        class="check-button {{ 'checked' | habit_is_checked(habit.id, day ~ time|date('FY')) }}"> {{ habit.name }}
                                </button>
                            </div>
                        </form>
                    {% endfor %}
                </div>
            </td>
            {% if loop.last and dow != 6 %}
                <td colspan="{{ 6 - dow }}">&nbsp;</td>
            {% endif %}
            {% if dow == 6 %}
            {% set dow = 0 %}
        </tr>
        <tr>
            {% else %}
                {% set dow = dow + 1 %}
            {% endif %}
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <div class="d-lg-none container">
        <div class="d-flex justify-content-between my-3">
            <a class="align-self-center btn-icon"
               href="{{ path('app_tracker', {'month': lastMonth}) }}"><i class="fas fa-chevron-circle-left"></i></a>
            <h1 class="display-5">{{ time|date('M Y') }}</h1>
            <a class="align-self-center btn-icon"
               href="{{ path('app_tracker', {'month': nextMonth}) }}"><i class="fas fa-chevron-circle-right"></i></a>
        </div>
        {% set daysInMonth = time|date('t') %}
        <div class="row">
            {% for day in range(1,daysInMonth) %}
                {% set month = time|date('F') %}
                {% set year = time|date('Y') %}
                {% set weekday = day ~ '.' ~ month ~ '.' ~ year %}
                {% set weekday = weekday|date('D') %}
                <div class="col-6 border" id="{{day}}">
                    <div class="col-12 text-center align-self-center">
                        {% if day == time|date('d') %}
                            <p class="text-info">{{ day }}. {{ weekday }}</p>
                        {% else %}
                            <p>{{ day }}. {{ weekday }}</p>
                        {% endif %}
                    </div>
                    <div class="d-flex justify-content-around flex-wrap mb-40">
                        {% for habit in habits %}
                            <div class="check-button-mobile ">
                                <form action="{{ path('app_habit_check', {'habit': habit.id, 'date': day ~ time|date('FY') }) }}"
                                      name="formName">
                                    <button type="submit"
                                            style="{{ habit_color(habit, day ~ time|date('FY')) }} {{ habit_background_color(habit, day ~ time|date('FY')) }}"
                                            class="btn {{ 'checked' | habit_is_checked(habit.id, day ~ time|date('FY'), true) }}"
                                    > {{ habit.name | first }}
                                    </button>
                                </form>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('main.js') }}"></script>
{% endblock %}