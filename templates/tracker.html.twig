{% extends 'base.html.twig' %}
{% import '_macros.html.twig' as macros %}

{% block title %}Track your habits{% endblock %}

{% block css %}
    {{ parent() }}
    <script src="{{ asset('css/main.css') }}"></script>
{% endblock css %}

{% block main %}
    <table class="table table-bordered">
        <thead>
        <tr class="month-name">
            <th colspan="7" class="text-center">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-secondary align-self-center" href="{{ path('app_tracker', {'month': lastMonth}) }}">{{ lastMonth|date('F') }}</a>
                    <h1 class="display-4">{{ time|date('F Y') }}</h1>
                    <a class="btn btn-outline-secondary align-self-center" href="{{ path('app_tracker', {'month': nextMonth}) }}">{{ nextMonth|date('F') }}</a>
                </div>
            </th>
        </tr>
        <tr class="week-name">
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% set daysInMonth = time|date('t') %}
            {% set startDow = time|date('F 1\\s\\t Y')|date('N') - 1 %}
            {% set dow = startDow %}
            {% for day in range(1,daysInMonth) %}
            {% if loop.first and startDow != 0 %}
                <td colspan="{{ startDow }}"></td>
            {% endif %}
            <td>
                <div>
                    <div>{{ day }}</div>
                    <div class="day">
                        {% for habit in habits %}
                            <form action="{{ path('app_habit_check', {'habit': habit.id, 'date': day ~ time|date('FY') }) }}"
                                  name="formName">
                                <div class="d-flex flex-column">
                                    <button type="submit"
                                            class="p-2  check-button {{ 'checked' | habit_is_checked(habit.id, day ~ time|date('FY')) }}"> {{ habit.name }}
                                    </button>
                                </div>
                            </form>
                        {% endfor %}
                    </div>
                </div>
            </td>
            {% if loop.last and dow != 6 %}
                <td colspan="{{ 6 - dow }}">&nbsp;</td>
            {% endif %}
            {% if dow == 6 %}
            {% set dow = 0 %}
        </tr>
        <tr>
            {% else %}
                {% set dow = dow + 1 %}
            {% endif %}
            {% endfor %}
        </tr>
        </tbody>
    </table>

{% endblock %}