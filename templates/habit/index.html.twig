{% extends 'base.html.twig' %}

{% block title %}All your habits{% endblock %}

{% block main %}

    <div class="d-flex justify-content-between p-2">
        <h1>All Habits</h1>
        <div class="d-">
            <a href="{{ path('app_habits_new')}}" class="btn btn-sm btn-outline-secondary">New</a>
        </div>
    </div>
    {% if habits|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Name</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for habit in habits %}
                <tr>
                    <td>{{ habit.name }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_habits_edit', { habit: habit.id })}}" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a href="{{ path('app_habits_delete', { habit: habit.id })}}" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
        <p>Add a new habits before you can mange and track them ğŸ˜</p>
    {% endif %}

{% endblock %}
