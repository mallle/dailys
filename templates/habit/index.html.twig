{% extends 'base.html.twig' %}

{% block title %}Hello HabitController!{% endblock %}

{% block body %}

    <h1>All Habits</h1>
    <a href="{{ path('app_habits_new')}}" class="btn btn-sm btn-outline-secondary">New</a>


    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>

                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for habit in habits %}
                <tr>
                    <td>{{ habit.name }}</td>
                    <td>
                        <a href="{{ path('app_habits_edit', { habit: habit.id })}}" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a href="{{ path('app_habits_delete', { habit: habit.id })}}" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
