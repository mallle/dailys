{% extends 'base.html.twig' %}

{% block title %}All your Habits{% endblock %}

{% block css %}
    {{ parent() }}
    <script src="{{ asset('css/main.css') }}"></script>
{% endblock css %}

{% block main %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_habits_new')}}" class="btn-icon"><i class="fas fa-plus-circle"></i></a>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-8 align-self-center">
            <h1>All your Habits</h1>
            {% if habits|length > 0 %}
                <ol>
                    {% for habit in habits %}
                        <li>
                            <div class="d-flex">
                                <div class="mr-auto p-2"><p>{{ habit.name }}</p></div>
                                <div class="check-button-mobile" style="color: {{ habit.color }}"><p>{{ habit.name | first }}</p></div>
                                <div class="p-2">
                                    <a href="{{ path('app_habits_edit', { 'habit': habit.id })}}" class="btn-icon"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="{{ path('app_habits_delete', { 'habit': habit.id })}}" class="btn-icon"><i class="fa fa-trash-alt"></i></a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ol>
            {% else %}
                <p>Add a new Habit before you can manage and track them 😁</p>
            {% endif %}
        </div>
    </div>
{% endblock %}

