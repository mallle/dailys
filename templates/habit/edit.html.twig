{% extends 'base.html.twig' %}

{% block title %}Your habit!{% endblock %}

{% block main %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_habits')}}" class="btn btn-sm btn-outline-secondary">Back to list with Habits</a>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-6 pt-5">
            <h1>
                {% if habit.id %}
                    Edit your habit: <br>{{ habit.name }}
                {% else %}
                    Add a new habit
                {% endif %}
            </h1>
            <div class="pt-5">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

