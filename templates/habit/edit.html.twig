{% extends 'base.html.twig' %}

{% block title %}Hello HabitController!{% endblock %}

{% block main %}

    <h1 class="text-center">
    {% if habit.id %}
        Edit your habit {{ habit.name }}
    {% else %}
        Add a new habit
    {% endif %}
    </h1>
    <div class="row">
        <div class="col-6 p-5">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>

        <div class="col-6 my-auto p-5">
            {% if habit.id %}
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for monthToHabit in habit.monthToHabits %}

                            <tr>
                                <td>{{ monthToHabit.month.name }}</td>
{#                                <td class="text-center">#}
{#                                        <a href="{{ path('app_habits_edit', { habit: habit.id })}}" class="btn btn-sm btn-outline-secondary">Edit</a>#}
{#                                        <a href="{{ path('app_habits_delete', { habit: habit.id })}}" class="btn btn-sm btn-outline-secondary">Delete</a>#}
{#                                </td>#}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            {% endif %}
        </div>
    </div>
{% endblock %}

