<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}DAILYs{% endblock %}</title>
        <script src="https://cdn.jsdelivr.net/npm/vue@2.6.11"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}
    </head>
    <body>
    {% block body %}
        {% block header %}
            {% include 'header.html.twig' %}
        {% endblock header %}
        <main class="container">
            {% block main %}{% endblock main %}
        </main>

        <footer class="footer mt-auto py-3 bg-info">
            <div class="container">
                <ul class="nav">
                    <li>
                        {% if is_granted('ROLE_USER') %}
                            <a class="nav-link" href="{{ path('app_reset_password') }}">Change password</a>
                        {% endif %}
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('legal_notice') }}" target="_blank">Legal Notice & Privacy Policy</a>
                    </li>
                </ul>
            </div>
        </footer>
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
    </body>
</html>
